<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.riggle.plug.ui.more.beat.insights.skus.InsightSKUsFragmentVM" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/nsvSKUs"
            android:fillViewport="true"
            android:overScrollMode="never">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/llUpArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/white_circle"
                    android:backgroundTint="@color/light_green_color"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="@dimen/_21sdp"
                        android:layout_height="@dimen/_21sdp"
                        android:padding="@dimen/_6sdp"
                        android:src="@drawable/ic_green_arrow_up" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvTopSelling"
                    style="@style/TextView.PoppinsMedium"
                    android:layout_width="0dp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="@string/top_selling_skus"
                    android:textColor="@color/dark_grey_txt_color"
                    android:elevation="@dimen/_20sdp"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintBottom_toBottomOf="@id/llUpArrow"
                    app:layout_constraintStart_toEndOf="@id/llUpArrow"
                    app:layout_constraintTop_toTopOf="@id/llUpArrow" />

                <LinearLayout
                    android:id="@+id/llNoDataBeatTopSKUs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_60sdp"
                    android:layout_marginBottom="@dimen/_60sdp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toTopOf="@+id/view1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvTopSelling">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/ic_freepik_folder" />

                    <TextView
                        android:id="@+id/tvNetworkUserName"
                        style="@style/TextView.PoppinsMedium"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="@string/no_data"
                        android:textColor="@color/dark_grey_txt_color"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvNetworkOrderTypes" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llTopSKUs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bg_1"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:paddingVertical="@dimen/_10sdp"
                    app:layout_constraintBottom_toTopOf="@+id/view1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvTopSelling">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/_15sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view">

                        <TextView
                            style="@style/TextView.PoppinsMedium"
                            android:layout_weight="1"
                            android:text="@string/brand"
                            android:textColor="@color/dark_grey_txt_color"
                            android:textSize="@dimen/_11ssp" />

                        <TextView
                            style="@style/TextView.PoppinsMedium"
                            android:layout_marginEnd="@dimen/_7sdp"
                            android:layout_weight="1.2"
                            android:gravity="center"
                            android:text="@string/product"
                            android:textColor="@color/dark_grey_txt_color"
                            android:textSize="@dimen/_11ssp" />

                        <TextView
                            style="@style/TextView.PoppinsRegular_12ssp"
                            android:layout_weight="0.8"
                            android:backgroundTint="@color/light_green_color"
                            android:gravity="center"
                            android:text="@string/value"
                            android:textColor="@color/dark_grey_txt_color"
                            android:textSize="@dimen/_11ssp" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvTopSellingSKUs"
                        android:paddingBottom="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/custom_layout_top_skus" />

                </LinearLayout>

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginHorizontal="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@color/dark_grey_txt_color10"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/llTopSKUs" />

                <LinearLayout
                    android:id="@+id/llDownArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/white_circle"
                    android:backgroundTint="@color/light_red_color"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view1">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="@dimen/_21sdp"
                        android:layout_height="@dimen/_21sdp"
                        android:padding="@dimen/_6sdp"
                        android:rotation="180"
                        android:src="@drawable/ic_green_arrow_up"
                        android:tint="@color/red_color_2" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvLowSelling"
                    style="@style/TextView.PoppinsMedium"
                    android:layout_width="0dp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="@string/low_selling_skus"
                    android:textColor="@color/dark_grey_txt_color"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintBottom_toBottomOf="@id/llDownArrow"
                    app:layout_constraintStart_toEndOf="@id/llDownArrow"
                    app:layout_constraintTop_toTopOf="@id/llDownArrow" />

                <LinearLayout
                    android:id="@+id/llNoDataBeatLowSKUs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_60sdp"
                    android:layout_marginBottom="@dimen/_60sdp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/llDownArrow">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/ic_freepik_folder" />

                    <TextView
                        style="@style/TextView.PoppinsMedium"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="@string/no_data"
                        android:textColor="@color/dark_grey_txt_color"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvNetworkOrderTypes" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llLowSKUs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bg_1"
                    android:elevation="@dimen/_10sdp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:orientation="vertical"
                    android:paddingVertical="@dimen/_10sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/llDownArrow">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/_15sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view">

                        <TextView
                            style="@style/TextView.PoppinsMedium"
                            android:layout_weight="1"
                            android:text="@string/brand"
                            android:paddingEnd="@dimen/_3sdp"
                            android:textColor="@color/dark_grey_txt_color"
                            android:textSize="@dimen/_11ssp" />

                        <TextView
                            style="@style/TextView.PoppinsMedium"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_weight="1.2"
                            android:gravity="center"
                            android:paddingEnd="@dimen/_3sdp"
                            android:text="@string/product"
                            android:textColor="@color/dark_grey_txt_color"
                            android:textSize="@dimen/_11ssp" />

                        <TextView
                            style="@style/TextView.PoppinsRegular_12ssp"
                            android:layout_weight="0.8"
                            android:backgroundTint="@color/light_green_color"
                            android:gravity="center"
                            android:text="@string/value"
                            android:textColor="@color/dark_grey_txt_color"
                            android:textSize="@dimen/_11ssp" />

                    </LinearLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvLowSellingSKUs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:paddingBottom="@dimen/_10sdp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/custom_layout_low_skus" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</layout>