<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="com.riggle.plug.ui.base.SimpleRecyclerViewAdapter.SimpleCallback" />

        <variable
            name="pos"
            type="Integer" />

        <variable
            name="bean"
            type="com.riggle.plug.data.model.UglyIssuence" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_8sdp"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_marginVertical="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                style="@style/TextView.InterRegular_12ssp"
                android:singleLine="true"
                android:text='@{"FasTag Number: " + bean.FNumber}'
                android:textColor="@color/fsm_text_color"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                style="@style/TextView.InterRegular_12ssp"
                android:singleLine="true"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="Assignee Name: Test User"
                android:textColor="@color/fsm_text_color"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                style="@style/TextView.InterRegular_12ssp"
                android:singleLine="true"
                android:text='@{"Privider: " + bean.bank}'
                android:layout_marginTop="@dimen/_2sdp"
                android:textColor="@color/fsm_text_color"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvLogin"
                style="@style/TextView.InterRegular_12ssp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/edit_back_view"
                android:backgroundTint="@color/line_color"
                android:fontFamily="@font/inter_medium"
                android:foreground="?selectableItemBackground"
                android:gravity="center"
                android:text="Accept Tag"
                android:textColor="@color/fsm_bg_light_teal"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvResetPass" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>