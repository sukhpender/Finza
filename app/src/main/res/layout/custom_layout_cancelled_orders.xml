<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="pos"
            type="Integer" />

        <variable
            name="bean"
            type="com.riggle.plug.data.model.NetworkCancelledOrdersResponseModel" />

        <variable
            name="callback"
            type="com.riggle.plug.ui.base.SimpleRecyclerViewAdapter.SimpleCallback" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_18sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_18sdp"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/_10sdp"
                app:layout_constraintBottom_toTopOf="@+id/view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvNetworkOrderTypes"
                    style="@style/TextView.PoppinsMedium"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/custom_round_corners_filled3sdp"
                    android:backgroundTint="@color/bg_color_orders_cancelled"
                    android:paddingHorizontal="@dimen/_7sdp"
                    android:paddingVertical="@dimen/_4sdp"
                    android:text="@string/cancelled"
                    android:textAllCaps="true"
                    android:textColor="@color/text_color_orders_cancelled"
                    android:textSize="@dimen/_9ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvNetworkUserName"
                    style="@style/TextView.PoppinsMedium"
                    setTextCapital="@{bean.buyer.name}"
                    android:layout_width="0dp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:singleLine="true"
                    android:textColor="@color/dark_grey_txt_color"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintBottom_toBottomOf="@+id/tvNetworkOrderTypes"
                    app:layout_constraintEnd_toStartOf="@+id/tvNetworkOrderTypes"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvNetworkOrderTypes" />

                <TextView
                    android:id="@+id/tvNetworkUserAddress"
                    style="@style/TextView.PoppinsMedium"
                    android:layout_width="0dp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:maxLines="3"
                    android:text="@{bean.buyer.full_address}"
                    android:textColor="@color/address_color"
                    android:textSize="@dimen/_9ssp"
                    app:layout_constraintEnd_toStartOf="@+id/tvNetworkOrderTypes"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvNetworkUserName" />

                <TextView
                    android:id="@+id/tvPendingOrderId"
                    style="@style/TextView.PoppinsMedium"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/order_id"
                    android:textColor="@color/dark_grey_txt_color"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvNetworkUserAddress" />

                <TextView
                    android:id="@+id/tvCompletedOrderIdValue"
                    style="@style/TextView.PoppinsMedium"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="@{bean.code}"
                    android:textColor="@color/dark_grey_txt_color"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintBottom_toBottomOf="@+id/tvPendingOrderId"
                    app:layout_constraintStart_toEndOf="@+id/tvPendingOrderId"
                    app:layout_constraintTop_toTopOf="@+id/tvPendingOrderId" />

                <TextView
                    android:id="@+id/tvCancelReason"
                    style="@style/TextView.PoppinsRegular_12ssp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:text='@{"Reasone: "+ bean.statuses[pos].remark}'
                    android:textColor="@color/dark_grey_txt_color"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvCompletedOrderIdValue" />

                <TextView
                    android:id="@+id/tvPendingOrderAmount"
                    style="@style/TextView.PoppinsRegular_12ssp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:drawablePadding="@dimen/_6sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:text='@{"Order Amount: â‚¹"+String.valueOf(bean.final_amount)}'
                    android:textColor="@color/dark_grey_txt_color"
                    android:textSize="@dimen/_12ssp"
                    app:drawableStartCompat="@drawable/ic_money"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvCancelReason" />

                <TextView
                    android:id="@+id/tvCancelledDetails"
                    style="@style/TextView.PoppinsMedium"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:drawablePadding="@dimen/_4sdp"
                    android:foreground="?selectableItemBackground"
                    android:onClick="@{v -> callback.onItemClick(v,bean,pos)}"
                    android:text="@string/details"
                    android:textColor="@color/offer_txt_color"
                    android:textSize="@dimen/_12ssp"
                    app:drawableStartCompat="@drawable/ic_details"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvPendingOrderAmount" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@color/text_color_orders_cancelled"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>
