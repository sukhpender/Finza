<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="pos"
            type="Integer" />

        <variable
            name="bean"
            type="com.riggle.plug.data.model.HomeModel" />

        <variable
            name="callback"
            type="com.riggle.plug.ui.base.SimpleRecyclerViewAdapter.SimpleCallback" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvItemCount"
            style="@style/TextView.PoppinsMedium"
            android:layout_marginStart="@dimen/_17sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="1"
            android:textColor="@color/dark_grey_txt_color"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_11sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:src="@drawable/ic_green_arrow"
            app:layout_constraintBottom_toBottomOf="@+id/tvItemCount"
            app:layout_constraintStart_toEndOf="@+id/tvItemCount"
            app:layout_constraintTop_toTopOf="@+id/tvItemCount" />

        <TextView
            android:id="@+id/tvName"
            style="@style/TextView.PoppinsMedium"
            android:layout_width="@dimen/_95sdp"
            android:layout_marginStart="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_17sdp"
            android:singleLine="true"
            android:text="@{bean.name}"
            android:textColor="@color/dark_grey_txt_color"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintStart_toEndOf="@+id/tvItemCount"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@color/dark_grey_txt_color15"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvName" />

        <com.mackhartley.roundedprogressbar.RoundedProgressBar
            android:id="@+id/pbHome"
            android:layout_width="0dp"
            android:layout_height="@dimen/_6sdp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            app:layout_constraintBottom_toBottomOf="@+id/tvName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvName"
            app:layout_constraintTop_toTopOf="@+id/tvName"
            app:rpbBackgroundColor="@color/dark_grey_txt_color20"
            app:rpbBackgroundTextColor="@color/white"
            app:rpbCornerRadius="@dimen/_5sdp"
            app:rpbProgress="75"
            app:rpbProgressColor="@color/offer_txt_color"
            app:rpbShowProgressText="true"
            app:rpbTextSize="@dimen/_5ssp" />

        <TextView
            android:id="@+id/tvRangeStart"
            style="@style/TextView.PoppinsMedium"
            android:layout_marginTop="@dimen/_1sdp"
            android:text="50 lakh"
            android:textColor="@color/offer_txt_color"
            android:textSize="@dimen/_6ssp"
            app:layout_constraintStart_toStartOf="@+id/pbHome"
            app:layout_constraintTop_toBottomOf="@+id/pbHome" />

        <TextView
            android:id="@+id/tvRangeEnd"
            style="@style/TextView.PoppinsMedium"
            android:layout_marginTop="@dimen/_1sdp"
            android:text="2 crore"
            android:textColor="@color/dark_grey_txt_color_80"
            android:textSize="@dimen/_6ssp"
            app:layout_constraintEnd_toEndOf="@+id/pbHome"
            app:layout_constraintTop_toBottomOf="@+id/pbHome" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
