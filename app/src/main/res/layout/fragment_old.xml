<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="vm"
            type="com.riggle.finza_finza.ui.finza.issuance.old.OldFragmentVM" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/line_colo10">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/line_color"
            android:layout_marginVertical="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_5sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        style="@style/TextView.InterRegular_12ssp"
                        android:layout_width="0dp"
                        android:layout_weight="2" />

                    <TextView
                        style="@style/TextView.InterRegular_12ssp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_semibold"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="Count"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        style="@style/TextView.InterRegular_12ssp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_semibold"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="Amount"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/white" />

                <LinearLayout
                    android:id="@+id/ll2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/line_colo10"
                    android:gravity="center">

                    <TextView
                        style="@style/TextView.InterRegular_12ssp"
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:drawableEnd="@drawable/forward_svgrepo_com_small"
                        android:drawableTint="@color/white"
                        android:gravity="center"
                        android:singleLine="true"
                        android:foreground="?selectableItemBackground"
                        android:onClick="@{v->vm.onClick(v)}"
                        android:id="@+id/tvMonth"
                        android:text="Sept 2024"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp"/>

                    <TextView
                        style="@style/TextView.InterRegular_12ssp"
                        android:layout_width="0dp"
                        android:layout_weight="0.5" />

                    <TextView
                        style="@style/TextView.InterRegular_12ssp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        style="@style/TextView.InterRegular_12ssp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="â‚¹ 0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv1"
            style="@style/TextView.InterRegular_12ssp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center"
            android:singleLine="true"
            android:text="Details : "
            android:textColor="@color/fsm_text_color"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv1"
            android:layout_margin="@dimen/_10sdp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvHomeDrawer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv1"
            tools:listitem="@layout/holder_ugly_issuence" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>