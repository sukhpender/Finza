<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="pos"
            type="Integer" />

        <variable
            name="bean"
            type="com.riggle.plug.data.model.NetworkPendingOrdersResponseModel" />

        <variable
            name="callback"
            type="com.riggle.plug.ui.base.SimpleRecyclerViewAdapter.SimpleCallback" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_18sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_18sdp"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/_10sdp"
                app:layout_constraintBottom_toTopOf="@+id/view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvNetworkOrderTypes"
                    style="@style/TextView.PoppinsMedium"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/custom_round_corners_filled3sdp"
                    android:backgroundTint="@color/voilet20"
                    android:paddingHorizontal="@dimen/_7sdp"
                    android:paddingVertical="@dimen/_4sdp"
                    android:text="@string/pending"
                    android:textColor="@color/voilet80"
                    android:textSize="@dimen/_9ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvNetworkUserName"
                    style="@style/TextView.PoppinsMedium"
                    setTextCapital="@{bean.buyer.name}"
                    android:layout_width="0dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:maxWidth="@dimen/_110sdp"
                    android:singleLine="true"
                    android:textColor="@color/dark_grey_txt_color"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvNetworkOrderTypes" />

                <TextView
                    android:id="@+id/tvNetworkUserAddress"
                    style="@style/TextView.PoppinsMedium"
                    android:layout_width="0dp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="start"
                    android:text="@{bean.buyer.full_address}"
                    android:textColor="@color/address_color"
                    android:textSize="@dimen/_9ssp"
                    app:layout_constraintEnd_toStartOf="@+id/tvNetworkCompanyAddress"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvNetworkUserName" />

                <TextView
                    android:id="@+id/tvNetworkCompanyName"
                    style="@style/TextView.PoppinsMedium"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:text="@{bean.seller.name}"
                    android:textColor="@color/dark_grey_txt_color"
                    android:textSize="@dimen/_14ssp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tvNetworkCompanyAddress"
                    app:layout_constraintTop_toTopOf="@+id/tvNetworkUserName" />

                <TextView
                    android:id="@+id/tvNetworkCompanyAddress"
                    style="@style/TextView.PoppinsMedium"
                    android:layout_width="0dp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="end"
                    android:text="no address coming ini response for seller"
                    android:textColor="@color/address_color"
                    android:textSize="@dimen/_9ssp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/tvNetworkUserAddress"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tvNetworkUserAddress"
                    app:layout_constraintTop_toTopOf="@+id/tvNetworkUserAddress" />

                <TextView
                    android:id="@+id/tvPendingOrderId"
                    style="@style/TextView.PoppinsMedium"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/order_id"
                    android:textColor="@color/dark_grey_txt_color"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvNetworkUserAddress" />

                <TextView
                    android:id="@+id/tvPendingOrderIdValue"
                    style="@style/TextView.PoppinsMedium"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="@{bean.code}"
                    android:textColor="@color/dark_grey_txt_color"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintBottom_toBottomOf="@+id/tvPendingOrderId"
                    app:layout_constraintStart_toEndOf="@+id/tvPendingOrderId"
                    app:layout_constraintTop_toTopOf="@+id/tvPendingOrderId" />

                <TextView
                    android:id="@+id/tvPendingOrderDate"
                    style="@style/TextView.PoppinsRegular_12ssp"
                    setOrderDate="@{bean.created_at}"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:drawablePadding="@dimen/_6sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/dark_grey_txt_color"
                    android:textSize="@dimen/_12ssp"
                    app:drawableStartCompat="@drawable/ic_calender_small"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvPendingOrderId" />

                <TextView
                    android:id="@+id/tvPendingDeliveryDate"
                    style="@style/TextView.PoppinsRegular_12ssp"
                    setDeliveryDate="@{bean.delivery_date}"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:drawablePadding="@dimen/_6sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/dark_grey_txt_color"
                    android:textSize="@dimen/_12ssp"
                    app:drawableStartCompat="@drawable/ic_calender_small"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvPendingOrderDate" />

                <TextView
                    android:id="@+id/tvPendingOrderAmount"
                    style="@style/TextView.PoppinsRegular_12ssp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:drawablePadding="@dimen/_6sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:text='@{"Order Amount: â‚¹ "+ String.valueOf(bean.pending_amount)}'
                    android:textColor="@color/dark_grey_txt_color"
                    android:textSize="@dimen/_12ssp"
                    app:drawableStartCompat="@drawable/ic_money"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvPendingDeliveryDate" />

                <TextView
                    android:id="@+id/tvPendingOrderDetails"
                    style="@style/TextView.PoppinsMedium"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:drawablePadding="@dimen/_6sdp"
                    android:foreground="?selectableItemBackground"
                    android:onClick="@{v -> callback.onItemClick(v,bean,pos)}"
                    android:text="@string/details"
                    android:textColor="@color/offer_txt_color"
                    android:textSize="@dimen/_12ssp"
                    app:drawableStartCompat="@drawable/ic_details"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvPendingOrderAmount" />

                <TextView
                    android:id="@+id/tvPendingOrderAssigned"
                    style="@style/TextView.PoppinsMedium"
                    android:background="@drawable/custom_round_corners_filled3sdp"
                    android:backgroundTint="@color/voilet20"
                    android:paddingHorizontal="@dimen/_7sdp"
                    android:paddingVertical="@dimen/_4sdp"
                    android:text="@{bean.assigned_runner.first_name}"
                    android:textColor="@color/voilet80"
                    android:textSize="@dimen/_9ssp"
                    android:visibility="@{bean.assigned_runner.first_name==null?View.INVISIBLE:View.VISIBLE}"
                    app:layout_constraintBottom_toBottomOf="@+id/tvPendingOrderDetails"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvPendingOrderDetails" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@color/voilet_dark_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>
