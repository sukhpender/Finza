<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="bean"
            type="com.riggle.plug.data.model.ResultCityBeats" />

        <variable
            name="pos"
            type="Integer" />

        <variable
            name="callback"
            type="com.riggle.plug.ui.base.SimpleRecyclerViewAdapter.SimpleCallback" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_7sdp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_3sdp"
            app:cardBackgroundColor="@color/line_color"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="@dimen/_3sdp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_2sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="0dp"
                app:cardPreventCornerOverlap="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvMoreBeatName"
                        style="@style/TextView.PoppinsMedium"
                        android:layout_width="0dp"
                        android:layout_marginStart="@dimen/_17sdp"
                        android:layout_marginTop="@dimen/_13sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:maxLines="2"
                        android:singleLine="false"
                        android:text="@{bean.name}"
                        android:textColor="@color/dark_grey_txt_color"
                        android:textSize="@dimen/_14ssp"
                        app:layout_constraintEnd_toStartOf="@+id/tvMoreBeatView"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvMoreBeatView"
                        style="@style/TextView.PoppinsRegular_12ssp"
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="@dimen/_17sdp"
                        android:background="@drawable/app_border_2sdp"
                        android:drawablePadding="@dimen/_3sdp"
                        android:foreground="?selectableItemBackground"
                        android:gravity="center"
                        android:onClick="@{v -> callback.onItemClick(v,bean,pos)}"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:paddingVertical="@dimen/_2sdp"
                        android:text="@string/view"
                        android:textColor="@color/line_color"
                        android:textSize="@dimen/_9ssp"
                        android:visibility="@{bean.number_of_retailers==0?View.GONE:View.VISIBLE}"
                        app:drawableStartCompat="@drawable/ic_view"
                        app:layout_constraintBottom_toBottomOf="@+id/tvMoreBeatName"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tvMoreBeatName" />

                    <TextView
                        android:id="@+id/tvMoreBeatNameAssigned"
                        style="@style/TextView.PoppinsRegular_12ssp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Retailers : "
                        android:textColor="@color/dark_grey_txt_color"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintStart_toStartOf="@id/tvMoreBeatName"
                        app:layout_constraintTop_toBottomOf="@+id/tvMoreBeatName" />

                    <TextView
                        android:id="@+id/tvMoreBeatNameAssignedStatus"
                        style="@style/TextView.PoppinsRegular_12ssp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@{String.valueOf(bean.number_of_retailers)}"
                        android:textColor="@color/dark_grey_txt_color"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintStart_toEndOf="@+id/tvMoreBeatNameAssigned"
                        app:layout_constraintTop_toBottomOf="@+id/tvMoreBeatName" />

                    <TextView
                        android:id="@+id/tvMoreBeatNameAssignedPerson"
                        style="@style/TextView.PoppinsRegular_12ssp"
                        setSalesPersonName="@{bean.salesmans}"
                        android:layout_width="0dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_13sdp"
                        android:textColor="@color/dark_grey_txt_color"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/tvMoreBeatName"
                        app:layout_constraintTop_toBottomOf="@+id/tvMoreBeatNameAssigned" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>