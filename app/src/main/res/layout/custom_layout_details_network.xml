<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="bean"
            type="com.riggle.plug.data.model.ProductNetworkOrderDetails" />

        <variable
            name="pos"
            type="Integer" />

        <variable
            name="callback"
            type="com.riggle.plug.ui.base.SimpleRecyclerViewAdapter.SimpleCallback" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

            <com.google.android.material.imageview.ShapeableImageView
                setImageWithFullUrl="@{bean.product.banner_image.image}"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_65sdp"
                android:contentDescription="@string/todo"
                android:src="@drawable/lahori"
                android:id="@+id/ivNetDetails"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize5Percent" />

        <TextView
            android:id="@+id/tvItemName"
            style="@style/TextView.PoppinsMedium"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:singleLine="true"
            android:text="@{bean.product.name}"
            android:textColor="@color/dark_grey_txt_color"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivNetDetails"
            app:layout_constraintTop_toTopOf="@+id/ivNetDetails" />

        <TextView
            android:id="@+id/tvItemQty"
            style="@style/TextView.PoppinsMedium"
            android:fontFamily="@font/poppins_regular"
            android:text='@{"Qty: "+String.valueOf(bean.quantity)}'
            android:textColor="@color/dark_grey_txt_color"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintBottom_toTopOf="@+id/tvItemTotal"
            app:layout_constraintStart_toStartOf="@+id/tvItemName"
            app:layout_constraintTop_toBottomOf="@+id/tvItemName" />

        <TextView
            android:id="@+id/tvItemRate"
            style="@style/TextView.PoppinsMedium"
            android:fontFamily="@font/poppins_regular"
            android:text='@{"Rate : "+String.valueOf(bean.rate)}'
            android:textColor="@color/dark_grey_txt_color"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintBottom_toBottomOf="@+id/tvItemQty"
            app:layout_constraintEnd_toStartOf="@+id/tvItemSet"
            app:layout_constraintStart_toEndOf="@+id/tvItemQty"
            app:layout_constraintTop_toTopOf="@+id/tvItemQty" />

        <TextView
            android:id="@+id/tvItemSet"
            style="@style/TextView.PoppinsMedium"
            setItemSetCountNetDetails="@{bean}"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/dark_grey_txt_color"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintBottom_toBottomOf="@+id/tvItemQty"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvItemRate"
            app:layout_constraintTop_toTopOf="@+id/tvItemQty" />

        <TextView
            android:id="@+id/tvItemTotal"
            style="@style/TextView.PoppinsMedium"
            android:layout_marginBottom="@dimen/_3sdp"
            android:fontFamily="@font/poppins_regular"
            android:text="Total : "
            android:textColor="@color/dark_grey_txt_color"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintBottom_toBottomOf="@+id/ivNetDetails"
            app:layout_constraintStart_toStartOf="@+id/tvItemName" />

        <TextView
            android:id="@+id/tvItemTotalValue"
            style="@style/TextView.PoppinsMedium"
            android:layout_marginStart="@dimen/_2sdp"
            android:text='@{"â‚¹ "+String.valueOf(bean.amount)}'
            android:textColor="@color/dark_grey_txt_color"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintBottom_toBottomOf="@+id/tvItemTotal"
            app:layout_constraintStart_toEndOf="@+id/tvItemTotal"
            app:layout_constraintTop_toTopOf="@+id/tvItemTotal" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
