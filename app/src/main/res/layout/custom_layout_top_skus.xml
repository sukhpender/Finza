<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="pos"
            type="Integer" />

        <variable
            name="bean"
            type="com.riggle.plug.data.model.TopSellingSku" />

        <variable
            name="callback"
            type="com.riggle.plug.ui.base.SimpleRecyclerViewAdapter.SimpleCallback" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@color/dark_grey_txt_color10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_15sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view">

            <TextView
                style="@style/TextView.PoppinsRegular_12ssp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:singleLine="true"
                android:gravity="start"
                android:text="@{bean.product__brand__name}"
                android:paddingEnd="@dimen/_3sdp"
                android:textColor="@color/dark_grey_txt_color"
                android:textSize="@dimen/_11ssp" />

            <TextView
                style="@style/TextView.PoppinsRegular_12ssp"
                android:layout_weight="1.3"
                android:text="@{bean.product__name}"
                android:layout_width="0dp"
                android:gravity="start"
                android:paddingEnd="@dimen/_3sdp"
                android:textColor="@color/dark_grey_txt_color"
                android:textSize="@dimen/_11ssp" />

            <TextView
                style="@style/TextView.PoppinsRegular_12ssp"
                android:layout_weight="0.65"
                android:background="@drawable/custom_round_corners_filled"
                android:backgroundTint="@color/light_green_color"
                android:gravity="center"
                android:text='@{"â‚¹"+String.valueOf(bean.revenue)}'
                android:paddingHorizontal="@dimen/_1sdp"
                android:layout_width="0dp"
                android:textColor="@color/green_color_text"
                android:textSize="@dimen/_11ssp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>