<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vm"
            type="com.riggle.plug.ui.home.home.SalesPerformanceFragmentVM" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:fitsSystemWindows="true"
            android:overScrollMode="never"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/clSalesPerformance1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clSalesPerformanceHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="@dimen/_100sdp">

                    <LinearLayout
                        android:id="@+id/clMain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:gravity="start"
                        android:orientation="horizontal"
                        android:weightSum="10.5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            style="@style/TextView.PoppinsMedium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_weight="4"
                            android:gravity="center_vertical"
                            android:text="@string/salesperson_name"
                            android:textColor="@color/dark_grey_txt_color"
                            android:textSize="@dimen/_8sdp" />

                        <TextView
                            style="@style/TextView.PoppinsMedium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/total_count"
                            android:textColor="@color/dark_grey_txt_color"
                            android:textSize="@dimen/_8sdp" />

                        <TextView
                            style="@style/TextView.PoppinsMedium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="@string/productive_count"
                            android:textColor="@color/dark_grey_txt_color"
                            android:textSize="@dimen/_8sdp" />

                        <TextView
                            style="@style/TextView.PoppinsMedium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_weight="1.5"
                            android:gravity="center"
                            android:text="@string/revenue"
                            android:textColor="@color/dark_grey_txt_color"
                            android:textSize="@dimen/_8sdp" />

                        <TextView
                            style="@style/TextView.PoppinsMedium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="@string/distance_km"
                            android:textColor="@color/dark_grey_txt_color"
                            android:textSize="@dimen/_8sdp" />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvSalesPerformace"
                    android:overScrollMode="never"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/clSalesPerformanceHeader"
                    tools:listitem="@layout/holder_sales_performance" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"

                    />


            </LinearLayout>

        </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>