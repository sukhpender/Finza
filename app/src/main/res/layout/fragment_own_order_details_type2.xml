<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="bean"
            type="com.riggle.plug.data.model.OwnOrderDetailsResponseModel" />

        <variable
            name="vm"
            type="com.riggle.plug.ui.orders.details.OwnOrderDetailsType2FragmentVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <include
            android:id="@+id/headerOwnOrderDetails2"
            layout="@layout/header_back_with_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:vm="@{vm}" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:overScrollMode="never"
            app:layout_constraintBottom_toTopOf="@+id/llTotalAmount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/headerOwnOrderDetails2">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@color/white"
                android:paddingHorizontal="@dimen/_15sdp"
                app:layout_constraintBottom_toTopOf="@+id/llTotalAmount"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/headerOwnOrderDetails2">

                <TextView
                    android:id="@+id/tvNetworkUserName"
                    style="@style/TextView.PoppinsMedium"
                    android:layout_width="0dp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@{bean.buyer.name}"
                    android:textColor="@color/dark_grey_txt_color"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintEnd_toStartOf="@+id/ivMoreOptionType2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/ivMoreOptionType2"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:foreground="?selectableItemBackground"
                    android:onClick="@{v->vm.onClick(v)}"
                    android:padding="@dimen/_5sdp"
                    android:rotation="90"
                    android:src="@drawable/more_horizontal"
                    app:layout_constraintBottom_toBottomOf="@+id/tvNetworkUserName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvNetworkUserName"
                    app:tint="@color/dark_grey_txt_color20" />

                <TextView
                    android:id="@+id/tvNetworkUserAddress"
                    style="@style/TextView.PoppinsMedium"
                    android:drawablePadding="@dimen/_4sdp"
                    android:text="@string/address"
                    android:textColor="@color/dark_grey_txt_color"
                    android:textSize="@dimen/_12ssp"
                    app:drawableStartCompat="@drawable/ic_location"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvNetworkUserName" />

                <TextView
                    android:id="@+id/tvNetworkUserAddressValue"
                    style="@style/TextView.PoppinsRegular_12ssp"
                    android:text="@{bean.buyer.full_address}"
                    android:textColor="@color/dark_grey_txt_color_80"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvNetworkUserAddress" />

                <TextView
                    android:id="@+id/tvOrderID"
                    style="@style/TextView.PoppinsMedium"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/order_id"
                    android:textColor="@color/dark_grey_txt_color"
                    android:textSize="@dimen/_13ssp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvNetworkUserAddressValue" />

                <TextView
                    android:id="@+id/tvOrderIDValue"
                    style="@style/TextView.PoppinsMedium"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="@{bean.code}"
                    android:textColor="@color/dark_grey_txt_color"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintBottom_toBottomOf="@+id/tvOrderID"
                    app:layout_constraintStart_toEndOf="@+id/tvOrderID"
                    app:layout_constraintTop_toTopOf="@+id/tvOrderID" />

                <TextView
                    android:id="@+id/tvGSTNumber"
                    style="@style/TextView.PoppinsMedium"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/gst_number"
                    android:textColor="@color/dark_grey_txt_color"
                    android:textSize="@dimen/_13ssp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvOrderID" />

                <TextView
                    android:id="@+id/tvGSTNumberValue"
                    style="@style/TextView.PoppinsMedium"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="@{bean.buyer_gst}"
                    android:textColor="@color/dark_grey_txt_color"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintBottom_toBottomOf="@+id/tvGSTNumber"
                    app:layout_constraintStart_toEndOf="@+id/tvGSTNumber"
                    app:layout_constraintTop_toTopOf="@+id/tvGSTNumber" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@color/dark_grey_txt_color20"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvGSTNumber" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvOwnOrderDetailsType2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toTopOf="@+id/view2"
                    app:layout_constraintStart_toStartOf="parent"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never"
                    app:layout_constraintTop_toBottomOf="@+id/view1"
                    tools:listitem="@layout/custom_layout_details_type_2" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:background="@color/dark_grey_txt_color20"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rvOwnOrderDetailsType2" />

                <TextView
                    android:id="@+id/tvUploadInvoice"
                    style="@style/TextView.PoppinsMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:layout_marginBottom="@dimen/_30sdp"
                    android:background="@drawable/btn_rounded_corner_6dp"
                    android:backgroundTint="@color/dark_grey_txt_color_60"
                    android:drawablePadding="@dimen/_5sdp"
                    android:foreground="?selectableItemBackground"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_15sdp"
                    android:text="@string/upload_invoice"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp"
                    app:drawableStartCompat="@drawable/ic_upload"
                    app:drawableTint="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view2" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/llTotalAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_color1"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/_15sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                style="@style/TextView.PoppinsMedium"
                android:layout_weight="1"
                android:paddingHorizontal="@dimen/_15sdp"
                android:text="@string/total_amount"
                android:textColor="@color/dark_grey_txt_color"
                android:textSize="@dimen/_14ssp" />

            <TextView
                style="@style/TextView.PoppinsMedium"
                android:layout_weight="1"
                android:gravity="end"
                android:paddingHorizontal="@dimen/_15sdp"
                android:text='@{"â‚¹ "+ String.valueOf(bean.product_amount)}'
                android:textColor="@color/dark_grey_txt_color"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>