<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="bean"
            type="com.riggle.plug.data.model.ProductOwnOrderDetails" />

        <variable
            name="pos"
            type="Integer" />
        <variable
            name="callback"
            type="com.riggle.plug.ui.base.SimpleRecyclerViewAdapter.SimpleCallback" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivItems"
            setImageWithFullUrl="@{bean.product.banner_image.image}"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_62sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:contentDescription="@string/todo"
            android:scaleType="centerCrop"
            android:shadowColor="@color/white"
            android:elevation="@dimen/_1sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize10Percent" />

        <TextView
            android:id="@+id/tvItemName"
            style="@style/TextView.PoppinsMedium"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:singleLine="true"
            android:text="@{bean.product.name}"
            android:textColor="@color/dark_grey_txt_color"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivItems"
            app:layout_constraintTop_toTopOf="@+id/ivItems" />

        <TextView
            android:id="@+id/tvItemQty"
            style="@style/TextView.PoppinsMedium"
            android:layout_marginBottom="@dimen/_3sdp"
            android:fontFamily="@font/poppins_regular"
            android:text='@{"Qty : "+ String.valueOf(bean.ordered_quantity)}'
            android:textColor="@color/dark_grey_txt_color"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintBottom_toTopOf="@+id/tvItemSet"
            app:layout_constraintStart_toStartOf="@+id/tvItemName"
            app:layout_constraintTop_toBottomOf="@+id/tvItemName" />

        <TextView
            android:id="@+id/tvItemTotal"
            style="@style/TextView.PoppinsMedium"
            android:fontFamily="@font/poppins_regular"
            android:text='@{"Total : â‚¹ "+String.valueOf(bean.amount)}'
            android:textColor="@color/dark_grey_txt_color"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintBottom_toBottomOf="@+id/tvItemSet"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvItemSet" />

        <TextView
            android:id="@+id/tvItemRate"
            style="@style/TextView.PoppinsMedium"
            android:fontFamily="@font/poppins_regular"
            android:text='@{"Rate : "+String.valueOf(bean.rate)}'
            android:textColor="@color/dark_grey_txt_color"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintBottom_toBottomOf="@+id/tvItemQty"
            app:layout_constraintEnd_toEndOf="@+id/tvItemTotal"
            app:layout_constraintTop_toTopOf="@+id/tvItemQty" />

        <TextView
            android:id="@+id/tvItemSet"
            style="@style/TextView.PoppinsMedium"
            setItemSetCount1="@{bean}"
            android:layout_marginBottom="@dimen/_3sdp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="bottom"
            android:textColor="@color/dark_grey_txt_color"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintBottom_toBottomOf="@+id/ivItems"
            app:layout_constraintStart_toStartOf="@+id/tvItemName" />

        <TextView
            android:id="@+id/tvItemTotalValue"
            style="@style/TextView.PoppinsMedium"
            android:layout_marginStart="@dimen/_5sdp"
            android:gravity="bottom"
            android:text="1"
            android:textColor="@color/dark_grey_txt_color"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintBottom_toBottomOf="@+id/tvItemTotal"
            app:layout_constraintStart_toEndOf="@+id/tvItemTotal"
            app:layout_constraintTop_toTopOf="@+id/tvItemTotal" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
