<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.riggle.plug.ui.more.beat.insights.MoreBeatInsightsFragmentVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent"
        tools:context=".ui.home.ui.more.beat.insights.MoreBeatInsightsFragment">

        <include
            android:id="@+id/headerMoreInsights"
            layout="@layout/header_back_with_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:vm="@{vm}" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tlInsight"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:overScrollMode="never"
                    app:tabGravity="fill"
                    app:tabSelectedTextColor="@color/line_color"
                    app:tabIndicatorColor="@color/line_color"
                    app:tabTextColor="@color/dark_grey_txt_color_80"
                    app:tabIndicatorHeight="@dimen/_2sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/headerMoreInsights"
                    app:tabMode="auto"
                    app:tabTextAppearance="@style/tab1" />

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/vpInsight"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_2sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tlInsight"
                app:layout_constraintBottom_toBottomOf="parent"
                android:overScrollMode="never"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>