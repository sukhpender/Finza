<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="pos"
            type="Integer" />

        <variable
            name="bean"
            type="com.riggle.plug.data.model.SalesTitle" />

        <variable
            name="callback"
            type="com.riggle.plug.ui.base.SimpleRecyclerViewAdapter.SimpleCallback" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="?selectableItemBackground"
        android:onClick="@{v -> callback.onItemClick(v,bean,pos)}"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvOtherName"
            style="@style/TextView.PoppinsMedium"
            setTitleBarColor="@{bean.selected}"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:hint=""
            android:paddingHorizontal="@dimen/_15sdp"
            android:text="@{bean.title}"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@drawable/custom_round_corners_filled3sdp"
            android:backgroundTint="@color/line_color"
            android:visibility="@{bean.selected==true?View.VISIBLE:View.INVISIBLE}"
            app:layout_constraintEnd_toEndOf="@+id/tvOtherName"
            app:layout_constraintStart_toStartOf="@id/tvOtherName"
            app:layout_constraintTop_toBottomOf="@+id/tvOtherName" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>